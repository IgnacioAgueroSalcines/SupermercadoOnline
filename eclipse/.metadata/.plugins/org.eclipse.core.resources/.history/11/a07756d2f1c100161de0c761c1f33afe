		dao=new PedidoDAO();
	}
	
	

	@Before
	public void setUp() throws Exception {
	}

	@After
	public void tearDown() throws Exception {
	}

	@Test
	public void testAdd() {
		Pedido pedido=new Pedido(1);
		Pedido res=dao.addElement(pedido);
