package es.unican.ps.supermercadoOnline.dao;

import static org.mockito.Mockito.verify;

import javax.ejb.embeddable.EJBContainer;
import javax.validation.constraints.AssertTrue;

import org.junit.AfterClass;
import org.junit.BeforeClass;
import org.junit.Test;

import es.unican.ps.supermercadoOnline.domain.Pedido;
import es.unican.ps.supermercadoOnline.domain.Usuario;


public class PedidoIntegracionTest {

	private static EJBContainer ec;
	private static GestionPedidoRealizadoEJB remote;
	private Pedido pedido;

    @BeforeClass
    public static void initContainer() throws Exception {
        ec = EJBContainer.createEJBContainer();
        
        remote = (GestionPedidoRealizadoEJB) ec.getContext().lookup("java:global/ejb-app/supermercadoOnline-dao-0.0.1-SNAPSHOT/");
    
   
    }
    
    @Test
	public void testInit() {
		Usuario usr = new Usuario();
		remote.init(usr);
		assertTrue(usr==remote.);
	
	}
    
 
    @AfterClass
    public static void closeContainer() throws Exception {
        //Cerramos el contenedor
        if (ec != null) {
            ec.close();
        }
    }
}
