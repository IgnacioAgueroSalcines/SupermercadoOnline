package es.unican.ps.supermercadoOnline.dao;

import java.util.List;

import javax.persistence.EntityManager;
import javax.persistence.Query;

import es.unican.ps.supermercadoOnline.domain.Articulo;

public class GenericDAO<T> {
	private EntityManager em;

	public T addElement(T element) {
		em.persist(element);
		return null;
	}

	public T removeElement(T element) {
		T res=null;
		res=em.find(T.class, element.getId());
		if (res != null) {
		      em.remove(res);
		    }
		return res;
	}

	public Articulo updateElement(Articulo element) {
		Articulo res=null;
		if(em.contains(element)){
			res= em.find(Articulo.class, element.getId());
			em.persist(res);
			res=element;
		}
		return res;
	}

	public List<T> listaElement() {
		Query query = em.createQuery("SELECT a FROM "+T+"Articulo a");
	    return (List<T>) query.getResultList();
	}

	public T getElement(long id) {
		T res=null;
		
		res= em.find(T.class, id);
		
		return res;
	}
}
