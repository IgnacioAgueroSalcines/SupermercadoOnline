	//valores vinculados a los facelets
	private int unidades;
	public String nombreArticulo;

	//metodos de accion
	public String add(){

		return "confirmaCompra.xhtml";
	}
	
	public String goBack(){

		return "iniciaCompra.xhtml";
	}
}
